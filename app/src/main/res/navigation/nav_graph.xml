<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.technopa.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment_layout">
        <action
            android:id="@+id/action_mainFragment_to_personalDietFragment"
            app:destination="@id/personalDietFragment" />
        <action
            android:id="@+id/action_mainFragment_to_personalTrainingFragment"
            app:destination="@id/personalTrainingFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dietListFragment"
            app:destination="@id/dietListFragment" />
        <action
            android:id="@+id/action_mainFragment_to_trainingListFragment"
            app:destination="@id/trainingListFragment" />
    </fragment>
    <fragment
        android:id="@+id/personalDietFragment"
        android:name="com.example.technopa.PersonalDiet.PersonalDietFragment"
        android:label="PersonalDietFragment"
        tools:layout="@layout/personal_diet_layout"/>
    <fragment
        android:id="@+id/personalTrainingFragment"
        android:name="com.example.technopa.PersonalTrainingFragment"
        android:label="PersonalTrainingFragment"
        tools:layout="@layout/personal_training_layout"/>
    <fragment
        android:id="@+id/dietListFragment"
        android:name="com.example.technopa.Diet.Views.DietListFragment"
        android:label="DietListFragment"
        tools:layout="@layout/diet_list_layout">
        <action
            android:id="@+id/action_dietListFragment_to_detailDietFragment"
            app:destination="@id/detailDietFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailDietFragment"
        android:name="com.example.technopa.Diet.Views.DetailDietFragment"
        android:label="DetailDietFragment"
        tools:layout="@layout/detail_diet_layout">
        <argument
            android:name="dieta"
            app:argType="com.example.technopa.Dieta"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/trainingListFragment"
        android:name="com.example.technopa.Trainings.Views.TrainingListFragment"
        android:label="TrainingListFragment"
        tools:layout="@layout/training_list_layout">

        <action
            android:id="@+id/action_trainingListFragment_to_detailTrainingFragment"
            app:destination="@id/detailTrainingFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailTrainingFragment"
        android:name="com.example.technopa.Trainings.Views.DetailTrainingFragment"
        android:label="DetailTrainingFragment"
        tools:layout="@layout/detail_training_layout">
        <argument
            android:name="training"
            app:argType="com.example.technopa.Training"
            app:nullable="true" />
    </fragment>
</navigation>