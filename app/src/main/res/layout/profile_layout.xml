<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/image1"
        />

    <TextView
        android:id="@+id/edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_alignStart="@+id/profile_image"
        android:layout_alignEnd="@+id/profile_image"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="@string/EditInformation"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="Имя"
        android:textSize="30sp"
        android:maxLines="1"
        android:ellipsize="end" />
    <TextView
        android:id="@+id/surname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_below="@+id/name_tv"
        android:textSize="30sp"
        android:layout_marginStart="30dp"
        android:text="Фамилия"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/height_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surname_tv"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="@string/Height"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/height_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/height_tv"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/height_tv"
        android:text=""
        android:textSize="20sp" />
    <TextView
        android:id="@+id/weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_below="@+id/height_tv"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:text="@string/Weight"
        />

    <TextView
        android:id="@+id/weight_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weight_tv"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/weight_tv"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/desired_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_tv"
        android:layout_alignBottom="@+id/edit_tv"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="@string/DesiredWeight"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/desired_weight_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/desired_weight_tv"
        android:layout_alignBottom="@+id/edit_tv"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/desired_weight_tv"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/progress_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:text=""
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/progress_value_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/progress_value_tv" />

    <Button
        android:id="@+id/achieve_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_value_tv"
        android:layout_centerInParent="true"
        android:layout_marginTop="21dp"
        android:text="@string/Achievments" />

    <TextView
        android:id="@+id/priemy_pishy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/achieve_btn"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="Приемы пищи"
        android:textSize="25sp"
        android:layout_marginBottom="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/priemy_pishy_tv"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="130sp"
        android:layout_toEndOf="@+id/priemy_pishy_tv"
        android:text="+добавить" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priemy_pishy_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30sp"
        android:text="Название" />

    <TextView
        android:id="@+id/Kkal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priemy_pishy_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="310sp"
        android:text="Ккалории" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/priemy_pishy_rv"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@id/Kkal_tv"
        android:layout_marginTop="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priemy_pishy_rv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="260sp"
        android:text="Итого" />
    <TextView
        android:id="@+id/kkal_sum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priemy_pishy_rv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="320sp"
        android:text="390" />



</RelativeLayout>
</ScrollView>