<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/edit_height"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Редактировать рост"
        android:gravity="center"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/edit_weight"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintLeft_toRightOf="@+id/edit_height"
        android:layout_marginLeft="20dp"
        android:text="Редактировать вес"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/edit_des_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Редактировать желаемый вес"
        app:layout_constraintTop_toBottomOf="@+id/edit_height"
        android:layout_marginTop="20dp"
        android:gravity="center"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/edit_name"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintLeft_toRightOf="@+id/edit_des_weight"
        android:layout_marginLeft="20dp"
        android:text="Редактировать имя"
        app:layout_constraintTop_toBottomOf="@+id/edit_weight"
        android:layout_marginTop="20dp"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        app:layout_constraintEnd_toEndOf="@+id/edit_name"
        app:layout_constraintStart_toStartOf="@+id/edit_des_weight"
        app:layout_constraintTop_toBottomOf="@+id/edit_des_weight" />

</androidx.constraintlayout.widget.ConstraintLayout>